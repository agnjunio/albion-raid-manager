{
  "name": "@black-river-gaming/albion-raid-manager",
  "packageManager": "pnpm@10.14.0",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "api": "turbo run dev --filter=@albion-raid-manager/api",
    "bot": "turbo run dev --filter=@albion-raid-manager/bot",
    "web": "turbo run dev --filter=@albion-raid-manager/web",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "infra:up": "docker-compose up -d",
    "infra:down": "docker-compose down",
    "infra:logs": "docker-compose logs -f",
    "infra:reset": "docker-compose down -v && docker volume prune -f",
    "infra:status": "docker-compose ps"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "dotenv": "^16.4.7",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.13.0",
    "prisma-generator-typescript-interfaces": "^2.1.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vitest": "^2.1.8"
  }
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guild {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  discordId    String
  raids        Raid[]
  compositions Composition[]
}

model Raid {
  id            Int         @id @default(autoincrement())
  description   String
  status        RaidStatus  @default(SCHEDULED)
  date          DateTime
  guild         Guild       @relation(fields: [guildId], references: [id])
  guildId       Int
  composition   Composition @relation(fields: [compositionId], references: [id])
  compositionId Int
}

model Composition {
  id      Int    @id @default(autoincrement())
  name    String
  Guild   Guild  @relation(fields: [guildId], references: [id])
  guildId Int
  Raid    Raid[]
}

model Build {
  id   Int    @id @default(autoincrement())
  name String
  role Role?
}

enum Role {
  CALLER
  TANK
  SUPPORT
  HEALER
  RANGED_DPS
  MEELE_DPS
  BATTLEMOUNT
}

enum RaidStatus {
  SCHEDULED
  OPEN
  CLOSED
  ONGOING
  FINISHED
}

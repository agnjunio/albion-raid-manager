generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guild {
  id        Int    @id @default(autoincrement())
  name      String @unique
  raids     Raid[]
  discordId String
}

model Raid {
  id            Int         @id @default(autoincrement())
  description   String
  status        RaidStatus  @default(SCHEDULED)
  date          DateTime
  guild         Guild       @relation(fields: [guildId], references: [id])
  guildId       Int
  composition   Composition @relation(fields: [compositionId], references: [id])
  compositionId Int
}

model Composition {
  id       Int    @id @default(autoincrement())
  name     String
  Raid     Raid[]
  Quantity Int
}

model Player {
  id       Int    @id @default(autoincrement())
  nickname String @unique
}

model Build {
  id       Int    @id @default(autoincrement())
  name     String
  role     Role?
  mainhand String
  offhand  String
  head     String
  armor    String
  shoes    String
  cape     String
  bag      String
  mount    String
  food     String
  potion   String
}

enum RaidStatus {
  SCHEDULED
  OPEN
  CLOSED
  ONGOING
  FINISHED
}

enum Role {
  TANK
  STOPPER
  SUPPORT
  HEALER
  MEELE_DPS
  RANGED_DPS
  BATTLEMOUNT
}

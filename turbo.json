{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "db:generate": {
      "inputs": ["prisma/schema.prisma"],
      "outputs": ["node_modules/.prisma", "node_modules/@prisma/client"],
      "cache": false,
      "env": ["DATABASE_URL"]
    },

    "start": {},
    "dev": {
      "dependsOn": ["^db:generate"],
      "inputs": ["src/**/*", "package.json"],
      "persistent": true
    },
    "build": {
      "dependsOn": ["^db:generate"]
    },
    "build#web": {
      "dependsOn": ["^db:generate"],
      "outputs": [".next/***", "!.next/cache/**"]
    },
    "lint": {},
    "prettier": {}
  }
}

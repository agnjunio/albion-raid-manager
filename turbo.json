{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "loose",
  "tasks": {
    "@albion-raid-manager/core#db:generate": {
      "inputs": ["prisma/schema.prisma"],
      "outputs": ["node_modules/.prisma", "node_modules/@prisma/client", "generated/**"],
      "cache": false,
      "env": ["DATABASE_URL"]
    },

    "build": {
      "dependsOn": ["^@albion-raid-manager/core#db:generate"],
      "inputs": ["src/**/*", "package.json", "tsconfig.json", "vite.config.ts"],
      "outputs": ["dist/**"],
      "env": ["NODE_ENV"]
    },

    "dev": {
      "dependsOn": ["^@albion-raid-manager/core#db:generate"],
      "inputs": ["src/**/*", "package.json"],
      "persistent": true,
      "env": ["NODE_ENV", "DATABASE_URL"]
    },

    "start": {
      "dependsOn": ["^@albion-raid-manager/core#db:generate"],
      "env": ["NODE_ENV", "DATABASE_URL"]
    },

    "lint": {
      "inputs": ["src/**/*", "package.json", "eslint.config.js", ".eslintrc.*"],
      "outputs": []
    },

    "lint:fix": {
      "inputs": ["src/**/*", "package.json", "eslint.config.js", ".eslintrc.*"],
      "outputs": []
    },

    "type-check": {
      "inputs": ["src/**/*", "package.json", "tsconfig.json"],
      "outputs": []
    },

    "test": {
      "inputs": ["src/**/*", "test/**/*", "package.json"],
      "outputs": ["coverage/**"]
    },

    "test:watch": {
      "inputs": ["src/**/*", "test/**/*", "package.json"],
      "persistent": true
    },

    "test:coverage": {
      "inputs": ["src/**/*", "test/**/*", "package.json"],
      "outputs": ["coverage/**"]
    }
  }
}
